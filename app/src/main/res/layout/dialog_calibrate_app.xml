<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_12sdp"
    android:background="@drawable/bg_calibrate_dialog"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ic_close"
        android:layout_gravity="end"
        android:src="@drawable/round_close_24"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        app:tint="#ccc" />
    <TextView
        android:text="@string/want_to_calibrate_lever"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:text="@string/place_your_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="@dimen/_12sdp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginEnd="@dimen/_12sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="@string/reset"
            android:background="@drawable/bg_btn_reset"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/white"
            android:id="@+id/btn_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginStart="@dimen/_12sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:background="@drawable/bg_btn_calbirate"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="@string/calibrate"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/white"
            android:id="@+id/btn_calirate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>